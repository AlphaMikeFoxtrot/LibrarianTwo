<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context="com.example.anonymous.librarian.AddBookToDatabase">

    <EditText
        android:layout_margin="12dp"
        android:id="@+id/new_book_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edit_text_border"
        android:padding="12dp"
        android:hint="New book name"/>

    <EditText
        android:layout_margin="12dp"
        android:id="@+id/new_book_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edit_text_border"
        android:padding="12dp"
        android:hint="New book ID (eg : SB12, ..)"/>

    <EditText
        android:layout_margin="12dp"
        android:id="@+id/new_book_number_of_copies_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edit_text_border"
        android:padding="12dp"
        android:hint="Number of copies (default is 1)"/>

    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Submit"
            android:id="@+id/new_book_submit_button"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Cancel"
            android:id="@+id/new_book_cancel_button"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Reset"
            android:id="@+id/new_book_reset_button"/>

    </LinearLayout>

</LinearLayout>
