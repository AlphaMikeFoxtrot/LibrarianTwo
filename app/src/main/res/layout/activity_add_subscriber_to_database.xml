<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.anonymous.librarian.AddSubscriberToDatabase">

    <EditText
        android:layout_margin="12dp"
        android:id="@+id/new_subscriber_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edit_text_border"
        android:padding="12dp"
        android:hint="New Subscriber Name"/>

    <EditText
        android:layout_margin="12dp"
        android:id="@+id/new_subscriber_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edit_text_border"
        android:padding="12dp"
        android:hint="New Subscriber ID (eg : SB12, ..)"/>

    <EditText
        android:layout_margin="12dp"
        android:inputType="phone"
        android:id="@+id/new_subscriber_phone_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edit_text_border"
        android:padding="12dp"
        android:hint="New Subscriber Phone No."/>

    <EditText
        android:layout_margin="12dp"
        android:inputType="textEmailAddress"
        android:id="@+id/new_subscriber_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edit_text_border"
        android:padding="12dp"
        android:hint="New Subscriber emailId"/>

    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Submit"
            android:id="@+id/new_subscriber_submit_button"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Cancel"
            android:id="@+id/new_subscriber_cancel_button"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Reset"
            android:id="@+id/new_subscriber_reset_button"/>

    </LinearLayout>

</LinearLayout>
