<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anonymous.librarian.ViewBookDetails">

    <ImageView
        tools:src="@drawable/search"
        android:layout_width="250px"
        android:layout_height="350px"
        android:id="@+id/book_details_image_view"
        android:layout_margin="12dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:fontFamily="sans-serif-smallcaps"
        style="@style/TextAppearance.AppCompat.Headline"
        tools:text="And then there were none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_details_book_name"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="12dp">

            <Button
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_detail_issue_book_button"
                android:textSize="14sp"
                android:text="Issue This book to Subscriber"
                android:layout_margin="12dp"
                android:layout_toRightOf="@id/button_image"
                android:layout_centerVertical="true"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <ImageView
                android:layout_alignParentLeft="true"
                android:src="@drawable/issue_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_image"
                android:scaleType="centerCrop"
                android:layout_margin="12dp"
                android:layout_gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="12dp">

            <Button
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_detail_return_book_button"
                android:textSize="14sp"
                android:text="Register return for this book"
                android:layout_margin="12dp"
                android:layout_toRightOf="@id/return_book_image"
                android:layout_centerVertical="true"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <ImageView
                android:layout_alignParentLeft="true"
                android:src="@drawable/book_returned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/return_book_image"
                android:scaleType="centerCrop"
                android:layout_margin="12dp"
                android:layout_gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="12dp">

            <Button
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_detail_delete_book_button"
                android:textSize="14sp"
                android:text="Delete This book from database"
                android:layout_margin="12dp"
                android:layout_toRightOf="@id/delete_button_image"
                android:layout_centerVertical="true"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <ImageView
                android:layout_alignParentLeft="true"
                android:src="@drawable/issue_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_button_image"
                android:scaleType="centerCrop"
                android:layout_margin="12dp"
                android:layout_gravity="center"/>

        </RelativeLayout>

    </GridLayout>

</LinearLayout>
